# 1. Define the security protocol
security.protocol=SSL

# 2. Path to the truststore (used to verify Kafka broker certificates)
ssl.truststore.location=/etc/kafka/secrets/shared.truststore.jks
ssl.truststore.password={{ certificate_password }}

# 3. Path to the keystore (contains the clientâ€™s private key and certificate)
ssl.keystore.location=/etc/kafka/secrets/{{ item.username }}.keystore.jks
ssl.keystore.password={{ certificate_password }}

# 4. Disable hostname verification (if broker hostname does not match certificate CN/SAN)
ssl.endpoint.identification.algorithm=

# 5. (Optional) Enable client debugging if needed
# Uncomment the following line for debugging authentication issues
# debug=security
