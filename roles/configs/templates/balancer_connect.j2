static_resources:
  listeners:
    - name: https_listener
      address:
        socket_address:
          address: 0.0.0.0
          port_value: {{ port_connect_balancer_int }}
      listener_filters:
        - name: envoy.filters.listener.tls_inspector
          typed_config:
            "@type": type.googleapis.com/envoy.extensions.filters.listener.tls_inspector.v3.TlsInspector
      filter_chains:
        - filter_chain_match:
            server_names: ["{{ hostvars['node-00']['hostname'] }}"]
          transport_socket:
            name: envoy.transport_sockets.tls
            typed_config:
              "@type": type.googleapis.com/envoy.extensions.transport_sockets.tls.v3.DownstreamTlsContext
              common_tls_context:
                tls_params:
                  tls_minimum_protocol_version: TLSv1_3
                  tls_maximum_protocol_version: TLSv1_3
                alpn_protocols: ["h2", "http/1.1"]
                tls_certificates:
                  - certificate_chain:
                      filename: "{{ node_certificates_path }}/nodes/{{ hostvars['node-00']['hostname'] }}/{{ hostvars['node-00']['hostname'] }}.fullchain.pem"
                    private_key:
                      filename: "{{ node_certificates_path }}/nodes/{{ hostvars['node-00']['hostname'] }}/{{ hostvars['node-00']['hostname'] }}.key"
                validation_context:
                  trusted_ca:
                    filename: "{{ node_certificates_path }}/CA/ca.crt"
              require_client_certificate: false
          filters:
            - name: envoy.filters.network.http_connection_manager
              typed_config:
                "@type": type.googleapis.com/envoy.extensions.filters.network.http_connection_manager.v3.HttpConnectionManager
                stat_prefix: ingress_https
                use_remote_address: true
                request_timeout: 0s
                stream_idle_timeout: 120s
                common_http_protocol_options:
                  idle_timeout: 300s
                route_config:
                  name: secure_route
                  response_headers_to_add:
                    - header:
                        key: "X-Upstream-Node"
                        value: "%UPSTREAM_HOST%"
                  virtual_hosts:
                    - name: node_backends
                      domains: ["*"]
                      routes:
                        - match:
                            prefix: "/"
                          route:
                            cluster: secure_nodes
                            timeout: 300s
                            idle_timeout: 120s
                            auto_host_rewrite: true
                            retry_policy:
                              retry_on: connect-failure,reset,5xx
                              num_retries: 3
                              per_try_timeout: 30s
                              host_selection_retry_max_attempts: 3
                http_filters:
                  - name: envoy.filters.http.router
                    typed_config:
                      "@type": type.googleapis.com/envoy.extensions.filters.http.router.v3.Router
                access_log:
                  - name: envoy.access_loggers.stdout
                    typed_config:
                      "@type": type.googleapis.com/envoy.extensions.access_loggers.stream.v3.StdoutAccessLog
                      log_format:
                        json_format:
                          timestamp: "%START_TIME%"
                          method: "%REQ(:METHOD)%"
                          path: "%REQ(:PATH)%"
                          authority: "%REQ(:AUTHORITY)%"
                          client_ip: "%DOWNSTREAM_REMOTE_ADDRESS%"
                          protocol: "%PROTOCOL%"
                          request_id: "%REQ(X-REQUEST-ID)%"
                          response_code: "%RESPONSE_CODE%"
                          response_flags: "%RESPONSE_FLAGS%"
                          bytes_received: "%BYTES_RECEIVED%"
                          bytes_sent: "%BYTES_SENT%"
                          duration_ms: "%DURATION%"
                          upstream_service_time: "%RESP(X-ENVOY-UPSTREAM-SERVICE-TIME)%"
                          tls_version: "%DOWNSTREAM_TLS_VERSION%"
                          tls_cipher: "%DOWNSTREAM_TLS_CIPHER%"
                          client_cert_subject: "%DOWNSTREAM_PEER_SUBJECT%"
                          client_cert_issuer: "%DOWNSTREAM_PEER_ISSUER%"
  clusters:
    - name: secure_nodes
      connect_timeout: 15s
      type: STRICT_DNS
      dns_lookup_family: V4_ONLY
      lb_policy: LEAST_REQUEST
      common_lb_config:
        healthy_panic_threshold:
          value: 0
      circuit_breakers:
        thresholds:
          - priority: DEFAULT
            max_connections: 1024
            max_pending_requests: 1024
            max_requests: 1024
            max_retries: 3
      close_connections_on_host_health_failure: true
      load_assignment:
        cluster_name: secure_nodes
        endpoints:
          - lb_endpoints:
{% for host in groups['connect'] %}
              - endpoint:
                  address:
                    socket_address:
                      address: {{ hostvars[host]['hostname'] }}
                      port_value: {{ port_connect_rest_ext }}
                  health_check_config:
                    hostname: {{ hostvars[host]['hostname'] }}
                metadata:
                  filter_metadata:
                    envoy.lb:
                      host_header: "{{ hostvars[host]['hostname'] }}"
                    envoy.transport_socket_match:
                      sni_label: "{{ host }}"
{% endfor %}
      health_checks:
        - timeout: 5s
          interval: 60s
          unhealthy_threshold: 1
          healthy_threshold: 2
          http_health_check:
            path: "/health"
            codec_client_type: HTTP1
            expected_statuses:
              - start: 200
                end: 201
          event_logger:
            - name: envoy.health_check.event_logger.file
              typed_config:
                "@type": type.googleapis.com/envoy.extensions.health_check.event_sinks.file.v3.HealthCheckEventFileSink
                event_log_path: /dev/stdout
      transport_socket_matches:
{% for host in groups['connect'] %}
        - name: {{ host }}
          match:
            sni_label: "{{ host }}"
          transport_socket:
            name: envoy.transport_sockets.tls
            typed_config:
              "@type": type.googleapis.com/envoy.extensions.transport_sockets.tls.v3.UpstreamTlsContext
              sni: {{ hostvars[host]['hostname'] }}
              common_tls_context:
                tls_params:
                  tls_minimum_protocol_version: TLSv1_3
                  tls_maximum_protocol_version: TLSv1_3
                tls_certificates:
                  - certificate_chain:
                      filename: "{{ node_certificates_path }}/users/admin/admin.fullchain.pem"
                    private_key:
                      filename: "{{ node_certificates_path }}/users/admin/admin.key"
                validation_context:
                  trusted_ca:
                    filename: "{{ node_certificates_path }}/CA/ca.crt"
{% endfor %}

admin:
  address:
    socket_address:
      address: 0.0.0.0
      port_value: {{ port_connect_balancer_admin_int }}
  access_log:
    - name: envoy.access_loggers.stdout
      typed_config:
        "@type": type.googleapis.com/envoy.extensions.access_loggers.stream.v3.StdoutAccessLog
        log_format:
          json_format:
            timestamp: "%START_TIME%"
            method: "%REQ(:METHOD)%"
            path: "%REQ(:PATH)%"
            authority: "%REQ(:AUTHORITY)%"
            client_ip: "%DOWNSTREAM_REMOTE_ADDRESS%"
            protocol: "%PROTOCOL%"
            request_id: "%REQ(X-REQUEST-ID)%"
            response_code: "%RESPONSE_CODE%"
            response_flags: "%RESPONSE_FLAGS%"
            bytes_received: "%BYTES_RECEIVED%"
            bytes_sent: "%BYTES_SENT%"
            duration_ms: "%DURATION%"
            upstream_service_time: "%RESP(X-ENVOY-UPSTREAM-SERVICE-TIME)%"
            tls_version: "%DOWNSTREAM_TLS_VERSION%"
            tls_cipher: "%DOWNSTREAM_TLS_CIPHER%"
            client_cert_subject: "%DOWNSTREAM_PEER_SUBJECT%"
            client_cert_issuer: "%DOWNSTREAM_PEER_ISSUER%"
overload_manager:
  refresh_interval: 0.25s
  resource_monitors:
    - name: envoy.resource_monitors.global_downstream_max_connections
      typed_config:
        "@type": type.googleapis.com/envoy.extensions.resource_monitors.downstream_connections.v3.DownstreamConnectionsConfig
        max_active_downstream_connections: 100000
